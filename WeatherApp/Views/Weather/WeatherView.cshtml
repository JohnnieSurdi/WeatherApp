@model WeatherApp.Models.Weather.WeatherResponse

<h2>Weather Information for @Model.Location.CityName, @Model.Location.CountryName</h2>

<div>
    <h3>Coordinates</h3>
    <p>Latitude: @Model.Location.Lat</p>
    <p>Longitude: @Model.Location.Lon</p>
</div>

<div>
    <h3>Weather</h3>
    <p>Main: @Model.Weather.Main</p>
    <p>Description: @Model.Weather.Description</p>
    
</div>

<div>
    <h3>Main Information</h3>
    <p>Temperature: @Model.Weather.Temp °C</p>
    <p>Pressure: @Model.Weather.Pressure hPa</p>
    <p>Humidity: @Model.Weather.Humidity %</p>
</div>

<div>
    <h3>Wind</h3>
    <p>Speed: @Model.Weather.Speed m/s</p>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}